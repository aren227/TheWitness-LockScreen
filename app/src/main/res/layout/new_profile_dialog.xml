<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Create New Profile"
        android:textColor="@color/colorPrimary"
        android:fontFamily="serif"
        android:textSize="24dp"
        android:paddingBottom="16dp" />

    <RadioGroup
        android:id="@+id/new_profile_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/new_profile_radio_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="20dp"
            android:text="Default"
            android:buttonTint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="16dp"
            android:textColor="#505050"
            android:text="Solve only one puzzle."
            android:paddingLeft="10dp"/>

        <RadioButton
            android:id="@+id/new_profile_radio_sequence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="20dp"
            android:text="Challenge"
            android:buttonTint="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="16dp"
            android:textColor="#505050"
            android:text="Solve a series of puzzles in a limited time."
            android:paddingLeft="10dp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/new_profile_radiogroup">

        <TextView
            android:id="@+id/new_profile_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:fontFamily="serif"
            android:textSize="24dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/new_profile_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Create"
            android:textColor="@color/colorPrimary"
            android:fontFamily="serif"
            android:textSize="24dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>