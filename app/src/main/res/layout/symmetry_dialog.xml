<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Apply Rotational Symmetry"
            android:textColor="@color/colorPrimary"
            android:fontFamily="serif"
            android:textSize="22dp"
            android:layout_marginBottom="2dp" />

        <LinearLayout
            android:id="@+id/line_color_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Line Color:"
                android:textColor="@color/colorPrimary"
                android:fontFamily="serif"
                android:textSize="22dp" />

            <RadioGroup
                android:id="@+id/line_color_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/line_color_none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textSize="20dp"
                    android:text="None"
                    android:buttonTint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/line_color_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:textSize="20dp"
                        android:text="Light"
                        android:buttonTint="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/circle_image"
                        android:tint="#00ffff"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/circle_image"
                        android:tint="#ffff00"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/line_color_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:textSize="20dp"
                        android:text="Dark"
                        android:buttonTint="@color/colorPrimary" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/circle_image"
                        android:tint="#60fccb"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"/>

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/circle_image"
                        android:tint="#f0d41d"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="This operation will delete start &amp; end points"
            android:textColor="@color/colorPrimary"
            android:fontFamily="serif"
            android:textSize="18dp"
            android:layout_margin="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cancel"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="36dp" />

            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Apply"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>