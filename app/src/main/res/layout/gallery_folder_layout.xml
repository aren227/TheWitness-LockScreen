<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/preview_root">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rounded_square_dashed"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:id="@+id/upper_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1.5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/puzzle_preview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@drawable/slightly_rounded_image_clip" />

                <View
                    android:id="@+id/puzzle_selected_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_image_glowing_bg"
                    android:layout_alignTop="@id/puzzle_preview_1"
                    android:layout_alignBottom="@id/puzzle_preview_1"
                    android:layout_alignStart="@id/puzzle_preview_1"
                    android:layout_alignEnd="@id/puzzle_preview_1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1.5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/puzzle_preview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@drawable/slightly_rounded_image_clip" />

                <View
                    android:id="@+id/puzzle_selected_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_image_glowing_bg"
                    android:layout_alignTop="@id/puzzle_preview_2"
                    android:layout_alignBottom="@id/puzzle_preview_2"
                    android:layout_alignStart="@id/puzzle_preview_2"
                    android:layout_alignEnd="@id/puzzle_preview_2" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upper_container"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1.5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/puzzle_preview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@drawable/slightly_rounded_image_clip" />

                <View
                    android:id="@+id/puzzle_selected_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_image_glowing_bg"
                    android:layout_alignTop="@id/puzzle_preview_3"
                    android:layout_alignBottom="@id/puzzle_preview_3"
                    android:layout_alignStart="@id/puzzle_preview_3"
                    android:layout_alignEnd="@id/puzzle_preview_3" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="1.5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/puzzle_preview_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@drawable/slightly_rounded_image_clip" />

                <View
                    android:id="@+id/puzzle_selected_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_image_glowing_bg"
                    android:layout_alignTop="@id/puzzle_preview_4"
                    android:layout_alignBottom="@id/puzzle_preview_4"
                    android:layout_alignStart="@id/puzzle_preview_4"
                    android:layout_alignEnd="@id/puzzle_preview_4" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:fontFamily="serif"
        android:textSize="16dp"
        android:textColor="#fafafa"
        android:drawablePadding="3dp"
        android:drawableLeft="@drawable/ic_baseline_folder_open_20"/>

</LinearLayout>
